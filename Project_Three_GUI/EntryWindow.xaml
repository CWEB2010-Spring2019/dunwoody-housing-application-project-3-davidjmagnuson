<Window x:Class="Project_Three_GUI.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Three_GUI"
        mc:Ignorable="d"
        Name="entryWindow" Title="Dunwoody Housing App" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="dunwoody.jpg"></ImageBrush>
    </Window.Background>
    <StackPanel>
        <Label Name="greeting_txt" HorizontalAlignment="Center" FontSize="25" Content="Welcome to the Dunwoody Housing Application!" Margin="75"/>
        <TextBox Name="username" Height="23" Width="200" HorizontalAlignment="Center" Margin="20" VerticalAlignment="Top" TextWrapping="Wrap" Text="username" TextChanged="Username_TextChanged"/>
        <TextBox Name="password" Height="23" Width="200" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" TextWrapping="Wrap" Text="password" TextChanged="Password_TextChanged"/>
        <Button Name="login_btn" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Width="74" Click="Login_btn_Click"/>
    </StackPanel>
</Window>
